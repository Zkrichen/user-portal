pipeline {
    agent any
    tools { 
        maven 'maven-3.6.0' 
        jdk 'JDK 8' 
    }
    stages {
    stage ('Initialize') {
            steps {
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
            }
        }
        stage('Build') { 
            steps {
                sh 'mvn clean compile' 
            }
        }
        stage('Test') { 
            steps {
                sh 'mvn test' 
            }
        }
        stage('Deploy') { 
            steps {
                sh 'mvn deploy' 
            }
        }
    }
}
